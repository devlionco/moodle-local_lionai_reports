{{!
    @template local_lionai_reports/historymodal

    Context variables required for this template:
    * history - History of prompts and queris as list

    Example context (json):
    {
        "history": [
            {
                "classes": "user",
                "role": "user",
                "content": "get all users",
            },
        ]
    }
}}
<div class="list-group lionai_reports-history-list">
    {{#history}}
    <a href="#" class="list-group-item list-group-item-action text-info lionai_reports-history-list-item {{classes}}"
        data-role="{{role}}">
        {{{content}}}
    </a>
    {{/history}}
</div>